<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"  android:orientation="vertical"
    android:weightSum="1"   android:background="#ffa8a8a2">
    <TextView android:text="@string/hello_world" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.03"
        android:background="#ff7ca5db" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="132dp"
        android:background="@drawable/border_blue"
        android:text="Make sure you move around,   It's been 30 Minutes."
        android:id="@+id/textView1"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:textSize="35dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:padding="10dp"
        android:textColor="#ff000000"
        android:layout_weight="0.16" />


</LinearLayout>
