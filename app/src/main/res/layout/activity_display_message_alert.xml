<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"  android:orientation="vertical"
    android:weightSum="1"   android:background="#ffa8a8a2">

    <TextView android:text="@string/hello_world" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.03"
        android:background="#ffdb1a49" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="132dp"
        android:background="@drawable/border_red"
        android:text="Earthquake       Stay away from windows, shelter under a table"
        android:id="@+id/textView2"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:textSize="35dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:padding="10dp"
        android:textColor="#ff000000"
        android:layout_weight="0.39" />



    <ToggleButton
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:text="New ToggleButton"
        android:id="@+id/toggleButton"
        android:layout_weight="0.03"
        android:checked="true"
        android:layout_gravity="center_horizontal"
        android:textOff="OFF"
        android:textOn="Ok"
        android:textSize="30dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="132dp"
        android:background="@drawable/border_red"
        android:text="Smoke detection            Leave your house to the nearest assembly point"
        android:id="@+id/textView3"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="10dp"
        android:textSize="35dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:padding="10dp"
        android:textColor="#ff000000"
        android:layout_weight="0.39" />

    <ToggleButton
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:text="New ToggleButton"
        android:id="@+id/toggleButton2"
        android:layout_weight="0.03"
        android:checked="true"
        android:layout_gravity="center_horizontal"
        android:textOff="OFF"
        android:textOn="Ok"
        android:textSize="30dp" />

</LinearLayout>
